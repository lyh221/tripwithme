<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menu_background"
    tools:context="com.example.tripwithme.MainActivity$PlaceholderFragment" >

 	<TextView
 	    android:id="@+id/selectmenu2"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:text="Select Menu" />
         
	<Button 
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#00FF0000"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:layout_above="@id/selectmenu2"
        android:id="@+id/TOUR"
        android:onClick="mOnClick"
        android:text="TOUR"/>
	

           
	<Button 
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#00FF0000"
        android:textColor="#ffffffff"
        android:layout_above="@id/TOUR"
        android:layout_marginBottom="25sp"
        android:textSize="30sp"        
        android:id="@+id/RESTAURENT"
        android:onClick="mOnClick"
        android:text="RESTAURENT"/>

	
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="#00FF0000"
        android:layout_above="@id/RESTAURENT"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="25dp"
        android:id="@+id/MAP"
        android:onClick="mOnClick"
        android:text="MAP"/>  

</RelativeLayout>
