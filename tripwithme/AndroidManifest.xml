<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripwithme"
    android:versionCode="1" android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    >
    	<activity 
    	    android:name=".introActivity" android:label="@string/app_name">
    	    	<intent-filter>
    	    	    <action android:name="android.intent.action.MAIN"/>
    	    	    <category android:name="android.intent.category.LAUNCHER" />
    	    	</intent-filter>
    	</activity>
        <activity
            android:name="com.example.tripwithme.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".search" android:label="@string/app_name"/>
        <activity android:name=".map" android:label="@string/app_name"/>
        <activity android:name=".menu" android:label="@string/app_name"/>
        <activity android:name=".Restaurant" android:label="@string/app_name"/>
        <activity android:name=".Tour" android:label="@string/app_name"/>
        <activity android:name=".restDetail" android:label="@string/app_name"/>
        <activity android:name=".tourDetail" android:label="@string/app_name"/>
    </application>

</manifest>
